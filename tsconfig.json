{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "**/packages/**/*.ts",
    "**/packages/**/*.vue",
    "**/packages/**/*.mts"
  ],
  "exclude": [
    "**/*.md",
    "**/dist-stale/**",
    "**/dist/**"
  ]
}